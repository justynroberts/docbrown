site_name: {{.RepoName}}
site_description: {{.Description}}
{{if .RepoURL}}site_url: {{.RepoURL}}{{end}}

theme:
  name: material
  palette:
    primary: indigo
    accent: indigo
  features:
    - navigation.tabs
    - navigation.sections
    - navigation.expand
    - search.suggest
    - search.highlight

nav:
  - Home: index.md
  - Architecture:
      - Overview: architecture/overview.md
  - Components:
      {{range .Components}}- {{.Name}}: components/{{.Name}}.md
      {{end}}
  - Guides:
      - Getting Started: guides/getting-started.md

plugins:
  - search
  - techdocs-core

markdown_extensions:
  - admonition
  - codehilite
  - toc:
      permalink: true
  - pymdownx.superfences:
      custom_fences:
        - name: mermaid
          class: mermaid
          format: !!python/name:pymdownx.superfences.fence_code_format
  - pymdownx.tabbed
  - pymdownx.details

